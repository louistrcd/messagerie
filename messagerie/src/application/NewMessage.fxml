<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="379.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <HBox BorderPane.alignment="CENTER">
         <padding>
            <Insets left="7.0" top="5.0" />
         </padding>
         <children>
            <ComboBox fx:id="recipient" editable="true" prefHeight="26.0" prefWidth="191.0" promptText="Recipient of the message" />
         </children>
      </HBox>
   </top>
   <center>
      <TextArea fx:id="message" prefHeight="324.0" prefWidth="500.0" promptText="Type your message here" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="47.0" left="4.0" right="4.0" top="10.0" />
         </BorderPane.margin>
      </TextArea>
   </center>
   <bottom>
      <Button mnemonicParsing="false" onAction="#sendMessage" text="Send Message" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="26.0" top="-20.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
</BorderPane>
